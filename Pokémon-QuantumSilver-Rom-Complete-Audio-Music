# Audio manager for handling all background music (BGM) and sound effects (SE)

# Johto Overworld Music
def on_map_load
  Audio.bgm_play("Audio/BGM/johto_overworld_music", 100, 100)  # Johto Overworld music
end

# Wild Battle Music
def on_wild_battle_start
  Audio.bgm_play("Audio/BGM/wild_battle_music", 100, 100)  # Wild Battle music
end

# Trainer Battle Music
def on_trainer_battle_start
  Audio.bgm_play("Audio/BGM/trainer_battle_music", 100, 100)  # Trainer Battle music
end

