def on_day_night_transition
  if Time.now.hour < 18  # Daytime (example)
    Audio.bgm_play("Audio/BGM/day_music", 100, 100)
  else
    Audio.bgm_play("Audio/BGM/night_music", 100, 100)
  end
end

